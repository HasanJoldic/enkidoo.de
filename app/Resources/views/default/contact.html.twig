{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-md-6">
            <h3 style="margin-bottom: 40px;">Kontakt</h3>
            <form id="contactForm" method="post" action="/kontakt/">
                <div class="row ">
                    <div class="col-lg-6">
                        <div class="form-group" >
                            <label for="name">Ihr Name (Pflichtfeld)</label>
                            <input type="text" class="form-control" id="name" name="name" required="required" />
                        </div>
                        <div class="form-group">
                            <label for="email">Ihre E-Mail-Adresse (Pflichtfeld)</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                </span>
                                <input type="email" class="form-control" id="email" name="email" required="required"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="tel">Ihre Telefonnummer</label>
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-phone" aria-hidden="true"></i>
                                </span>
                                <input type="tel" class="form-control" id="tel" name="tel"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label for="message">Nachricht</label>
                            <textarea name="message" id="message" class="form-control" rows="10"
                            required="required" placeholder= Nachricht ></textarea>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <button type="submit" class="btn bg-info pull-right" id="btnContactUs">
                            Verschicken</button>
                    </div>
                </div>
            </form>
        </div>
    </div>


{% endblock %}
